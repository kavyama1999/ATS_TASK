<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.4.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_4_0.dtd">

<service-builder dependency-injector="ds"
	package-path="library.db">
	<namespace>lib</namespace>
	<!--<entity data-source="sampleDataSource" local-service="true" name="Foo" 
		remote-service="false" session-factory="sampleSessionFactory" table="foo" 
		tx-manager="sampleTransactionManager uuid="true""> -->
	<entity local-service="true" name="library_books"
		remote-service="true" uuid="true">

		<!-- PK fields -->

		<column name="libId" primary="true" type="long"
			id-type="increment" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="book_name" type="String" />
		<column name="author" type="String" />
		<column name="title" type="int" />
		<column name="publisherd_year" type="int" />
		<column name="category" type="String" />
		

      <order by="asc" >
    <order-column name="publisherd_year"></order-column>
    </order>

 <!-- This belongs in library_books to find books by group -->
    <finder name="GroupId" return-type="Collection">
        <finder-column name="groupId" />
    </finder>

	</entity>


	<entity local-service="true" name="book_review"
		remote-service="true" uuid="true">

		<!-- PK fields -->

		<column name="reviewId" primary="true" type="long"
			id-type="increment" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Foreign key to library_books -->
		<column name="libId" type="long" />

		<!-- Other fields -->

		<column name="reviewerName" type="String" />
		<column name="reviewDate" type="Date" />
		<column name="rating" type="int" />
		<column name="comment" type="String" />
		<column name="approved" type="boolean" />

		<!-- This belongs in book_review because we want to find reviews by book ID -->
		<finder name="LibId" return-type="Collection">
			<finder-column name="libId" />
		</finder>
		

		<!-- Logical relationship -->
		<reference entity="library_books" package-path="library.db" />

	</entity>

</service-builder>

